@model HospitalManagement.Models.PatientDto

@{
    ViewBag.Title = "View";
    var backgroundImagePath = Url.Content("~/Content/Images/Location/HM.jpeg"); // Change to appropriate image path
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url('@backgroundImagePath');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            font-family: Arial, sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .content {
            background-color: rgba(0, 0, 0, 0.5);
            padding: 20px;
            border-radius: 10px;
            text-align: left;
            margin: 50px auto;
            max-width: 600px;
        }

        h2 {
            color: ghostwhite;
            font-size: 2em;
            margin-bottom: 10px;
            text-align: center;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin: 10px 5px;
            font-size: 16px;
            color: #fff;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            cursor: pointer;
        }

        .btn-update {
            background-color: lightseagreen;
        }

        .btn-delete {
            background-color: lightcoral;
        }

        .btn-back {
            background-color: navy;
        }

        .btn:hover {
            opacity: 0.8;
        }

        .detail {
            margin-bottom: 10px;
            color: ghostwhite;
        }
    </style>
</head>
<body>
    <a href="/Patient/List" class="btn btn-back">Go back to List</a>
    <div class="content">
        <h2>@Model.PatientName</h2>
        <div class="detail">Phone: @Model.PatientPhone</div>
        <div class="detail">Email: @Model.PatientEmail</div>
        <div class="detail">Staff Department: @Model.StaffName</div>

        <a href="/Patient/Edit/@Model.PatientId" class="btn btn-update">Update</a>
        <a style="color: #ab2020;" href="/Patient/DeleteConfirm/@Model.PatientId" class="btn btn-delete">Delete</a>
    </div>
</body>
</html>



